{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "src/migrations"
  ],
  "include": [
    "index.ts",
    "src"
  ]
}
